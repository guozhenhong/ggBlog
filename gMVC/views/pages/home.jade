extends ../layout

block content
	.container
		.row
			each item in blogs
				.col-md-2
					.thumbnail
						a(href="/blogs/#{item._id}")
							img(src="#{item.poster}", alt="#{item.title}")
						.caption
							h3 #{item.title}
							p: a.btn.btn-primary(href="/blogs/#{item._id}", role="button") 查看日志